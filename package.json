{
    "name": "bolletta-piu",
    "version": "1.0.0",
    "description": "BOLLETTA pi√π utility bill calculation service",
    "private": true,
    "scripts": {
      "start": "node server/server.js",
      "server": "nodemon server/server.js",
      "client": "cd client && npm run dev",
